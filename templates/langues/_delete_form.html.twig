<form method="post" action="{{ path('delete_language', {'id': langue.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette combinaison linguistique?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ langue.id) }}">
    <button class="btn">Delete</button>
</form>
