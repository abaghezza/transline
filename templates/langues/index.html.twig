{% extends 'base.html.twig' %}

{% block title %}langues index
 {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


    <h1>liste des langues proposees par Transline </h1>
	
	<a href="{{ path('new_language') }}">Ajouter une nouvelle combinaison linguistique</a>
	<table class="table" id="lstindex">
	
	<thead>
		<tr>
			
			<th>Combinaison linguistique</th>
			<th>action</th>
		</tr>
	</thead>
	
		<tbody>
		{% for langue  in langue %}
		<tr>
	<td> <a href="{{ path('show_language', {'id': langue.id}) }}">{{ langue.combination }}</a></td>
	<td><a href="{{ path('edit_language', {'id': langue.id}) }}">Modifier</a></td>
	
			</tr>
		{% else %}
			<tr>
				<td colspan="8">no records found</td>
			</tr>
		{% endfor %}

</tbody>
</table>

    
{% endblock %}
